{
  "name": "specify/specify",
  "type": "library",
  "keywords": [ "hack", "hhvm", "spec", "test", "bdd" ],
  "description": "BDD testing framework for Hack",
  "license": "MIT",
  "authors": [
    {
      "name": "holyshared",
      "email": "holy.shared.design@gmail.com"
    }
  ],
  "require": {
    "hhvm": ">=3.5.0"
  },
  "require-dev": {
    "expect/peridot-expect-plugin": "~3.0",
    "peridot-php/peridot": "~1.15",
    "peridot-php/peridot-dot-reporter": "~1.0",
    "phpspec/prophecy": "~1.4"
  },
  "autoload": {
    "psr-4": {
      "specify\\": "src"
    },
    "files": [
      "src/autoload.hh"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "specify\\example\\": "example",
      "specify\\helper\\": "specs/helper",
      "specify\\fixtures\\": "specs/fixtures/specs"
    }
  },
  "bin": [
    "bin/specify"
  ],
  "scripts": {
    "test": "vendor/bin/peridot -c peridot.hh --grep *Spec.hh specs -r dot",
    "example": "bin/specify -c example/specify.hh"
  },
  "minimum-stability": "dev"
}
